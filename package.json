{
  "name": "electron-outlook",
  "productName": "Outlook Electron",
  "version": "1.0.1",
  "description": "Outlook Electron Desktop application",
  "main": "src/main.js",
  "author": "Tom Laird-McConnell",
  "email":"tomlm@microsoft.com",
  "repository": "https://github.com/tomlm/electron-outlook",
  "license": "MIT",
  "keywords": [
    "Electron",
    "Outlook",
    "Microsoft",
    "Outlook Desktop"
  ],
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist:linux": "electron-builder --linux deb",
    "dist:macOS": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "electron-settings": "^3.2.0"
  },
  "build": {
    "appId": "tomlm.${name}",
    "linux": {
      "category": "Office",
      "desktop": {
        "StartupWMClass": "Outlook Electron"
      },
      "target": "deb"
    },
    "win": {
      "target":"msi"
    }
  }
}